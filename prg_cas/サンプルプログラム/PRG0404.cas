PRG0404   START
          RPUSH
          LD      GR1, =-1
          LD      GR2, =0
          CPA     GR1, =0               ; GR1と0を比較
          JPL     COPY                 ; GR1が正ならLABELへ
          JZE     COPY                 ; GR1 がゼロでもLABELへ
          LD      GR2, =#000F
          XOR     GR1, =#FFFF
          ADDL    GR1, =1               ; 符号を反転
COPY      LD      GR3, GR1
          RPOP
          RET
          END
